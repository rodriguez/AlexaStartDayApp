{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "./",
        "sourceMap": false,
        "allowJs": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "exclude": [
        "/**/node_modules",
        "lambda/local/",
        "__tests__",
        "**/__mocks__"
    ]
}